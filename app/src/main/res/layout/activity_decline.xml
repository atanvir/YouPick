<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".screens.declineActivity.DeclineActivity">

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Are you sure?"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/yesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/yesButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/round_corner_green2"
            android:fontFamily="@font/sf_pro_text_bold"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="@dimen/button_padding_top"
            android:paddingBottom="@dimen/button_padding_bottom"
            android:text="Yes, I'm Sure "
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginStart="-14dp"
            android:layout_marginEnd="-14dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/noButton"
            app:layout_constraintEnd_toEndOf="@+id/textView62"
            app:layout_constraintStart_toStartOf="@+id/textView62"
            app:layout_constraintTop_toBottomOf="@+id/textView62" />

        <Button
            android:id="@+id/noButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_red"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="Ooops!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:paddingTop="@dimen/button_padding_top"
            android:paddingBottom="@dimen/button_padding_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/yesButton"
            app:layout_constraintStart_toStartOf="@+id/yesButton"
            app:layout_constraintTop_toBottomOf="@+id/yesButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
