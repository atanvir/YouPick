<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecrop="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout19"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        imagecrop:layout_constraintBottom_toBottomOf="parent"
        imagecrop:layout_constraintEnd_toEndOf="parent"
        imagecrop:layout_constraintStart_toStartOf="parent"
        imagecrop:layout_constraintTop_toTopOf="parent">


        <com.naver.android.helloyako.imagecrop.view.ImageCropView
            android:id="@+id/imageCropView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:elevation="1dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout19"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout19"
            app:layout_constraintHeight_max="250dp"
            app:layout_constraintHeight_min="10dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout19"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout19"
            imagecrop:gridInnerColor="#66ffffff"
            imagecrop:gridInnerStroke="1dp"
            imagecrop:gridOuterColor="#ffffff"
            imagecrop:gridOuterStroke="1dp"
            imagecrop:layout_constraintBottom_toBottomOf="parent"
            imagecrop:layout_constraintEnd_toEndOf="parent"
            imagecrop:layout_constraintStart_toStartOf="parent"
            imagecrop:layout_constraintTop_toTopOf="parent"
            imagecrop:outsideLayerColor="#99000000"
            imagecrop:setInnerGridMode="on"
            imagecrop:setOuterGridMode="on" />

        <ImageView
            android:id="@+id/closeIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:elevation="1dp"
            android:padding="4dp"
            app:tint="@color/white"
            imagecrop:layout_constraintEnd_toEndOf="parent"
            imagecrop:layout_constraintTop_toTopOf="parent"
            imagecrop:srcCompat="@drawable/tick2" />

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:elevation="1dp"
            android:padding="8dp"
            app:tint="@color/white"
            imagecrop:layout_constraintStart_toStartOf="@+id/imageCropView"
            imagecrop:layout_constraintTop_toTopOf="parent"
            imagecrop:srcCompat="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

